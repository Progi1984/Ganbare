{% trans_default_domain 'FOSUserBundle' %}
<h2 class="ui teal image header">
    <img src="https://semantic-ui.com/images/logo.png" class="image">
    <div class="content">Register an account</div>
</h2>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'ui large form error'}}) }}
    <div class="ui stacked segment">
        <div class="field">
            <div class="ui left icon input">
                <i class="user icon"></i>
                {{ form_widget(form.username, {'attr': {'placeholder': 'Username'}}) }}
            </div>
        </div>
        {% if form_errors(form.username) %}
            <div class="ui error message left aligned">{{ form_errors(form.username) }}</div>
        {% endif %}
        <div class="field">
            <div class="ui left icon input">
                <i class="mail icon"></i>
                {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
            </div>
        </div>
        {% if form_errors(form.email) %}
            <div class="ui error message left aligned">{{ form_errors(form.email) }}</div>
        {% endif %}
        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Password'}}) }}
            </div>
        </div>
        {% if form_errors(form.plainPassword.first) %}
        <div class="ui error message left aligned">{{ form_errors(form.plainPassword.first) }}</div>
        {% endif %}
        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Repeat password'}}) }}
            </div>
        </div>
        {% if form_errors(form.plainPassword.second) %}
            <div class="ui error message left aligned">{{ form_errors(form.plainPassword.second) }}</div>
        {% endif %}
        {{ form_rest(form) }}
        <div>
            <input class="ui fluid large teal submit button" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
    </div>

{{ form_end(form) }}

<div class="ui message">
    Ever registered? <a href="{{ path('fos_user_security_login') }}">Log in</a>
</div>