{% trans_default_domain 'FOSUserBundle' %}
<h2 class="ui teal image header">
    <img src="https://semantic-ui.com/images/logo.png" class="image">
    <div class="content">Log-in to your account</div>
</h2>
<form class="ui large form {% if error %}error{% endif %}" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="ui stacked segment">
        <div class="field">
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input type="text" name="_username" placeholder="{{ 'security.login.username'|trans }}" required="required" >
            </div>
        </div>
        <div class="field">
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" >
            </div>
        </div>
        <div class="field left aligned">
            <div class="ui checkbox">
                <input type="checkbox" class="hidden" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        <input class="ui fluid large teal submit button" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

    {% if error %}
    <div class="ui error message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
<div class="ui message">
    New to us? <a href="{{ path('fos_user_registration_register') }}">Sign Up</a>
</div>